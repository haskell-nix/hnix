      Nix.Value.Equal
      Nix.Value.Monad
      Nix.Var
      Nix.XML
  other-modules:
      Paths_hnix
  hs-source-dirs:
      src
  ghc-options: -Wall -fprint-potential-instances
  build-depends:
      aeson >= 1.4.2 && < 1.6
    , array >= 0.4 && < 0.6
    , base >= 4.11 && < 5
    , binary >= 0.8.5 && < 0.9
    , bytestring >= 0.10.8 && < 0.11
    , comonad >= 5.0.4 && < 5.1
    , containers >= 0.5.11.0 && < 0.7
